{
  "name": "asc-ftv-frontend",
  "version": "1.0.0",
  "description": "ASC FutevÃ´lei Frontend Application",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "dev": "tsc --watch",
    "clean": "rm -rf dist/",
    "copy-assets": "npm run copy-static && npm run copy-pages",
    "copy-static": "cp -r src/css src/partials static/config.js.tpl dist/ 2>/dev/null || true",
    "copy-pages": "mkdir -p dist/pages && cp src/pages/* dist/pages/ 2>/dev/null || true",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/typescript/**/*.ts",
    "lint:fix": "eslint src/typescript/**/*.ts --fix"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "html-webpack-plugin": "^5.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "ts-loader": "^9.0.0"
  },
  "keywords": [
    "futevolei",
    "frontend",
    "typescript"
  ],
  "author": "ASC FTV",
  "license": "ISC"
}
